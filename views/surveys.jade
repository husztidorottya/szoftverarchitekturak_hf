extends layout

block content

    <!--Navbar Content-->
    navbar.navbar-inverse.navbar-fixed-top.bs-docs-nav(role='banner')
        .container-fluid
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(id='logo', href='/')
                    img(alt='Home', src='/images/logo.png' class='img-rounded' width='50' height='50')
            nav.collapse.navbar-collapse.bs-navbar-collapse(role='navigation')
                ul.nav.navbar-nav.navbar-right 
                    li
                        a(href='/logout') 
                            i.glyphicon.glyphicon-log-out
                            span  Log out
    div.content
        div(class="centered")
            .form-group
                form(method='post', action='/add-survey', role="form", rows='2')
                    .form-group
                        textarea.input-lg.form-control(id='survey_form', type='text', name='survey_title', placeholder='Enter a survey', required)
                        button.btn.btn-primary.btn-lg(type='submit') Create a Survey
            h2.lead or Manage Surveys
    .row
        table.table
            each s in surveys
                tr
                    td
                        a(class='survey' href='/surveys/' + s.Sid)=s.title
                    td.col-md-2
                        .btn-toolbar
                            a.btn.btn-primary.singlebutton(href='/surveys/'+s.Sid)
                                i.glyphicon.glyphicon-pencil
                                span  Edit
                            a.btn.btn-success.singlebutton(href='/surveys/'+s.Sid+'/results')
                                i.glyphicon.glyphicon-stats
                                span  Results
                            a.btn.btn-danger.singlebutton(href='/surveys/'+s.Sid+'/delete')
                                i.glyphicon.glyphicon-trash
